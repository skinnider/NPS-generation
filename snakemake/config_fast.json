{
  "output_dir": "data",
  "dataset": "/path/to/<dataset>.txt",
  "pubchem_tsv_file": "/path/to/PubChem.tsv",

  "representations": ["SMILES"],
  "folds": 3,
  "seeds": [0, 1],
  "enum_factors": [0],
  "max_input_smiles": 1000,

  "model_params": {
    "rnn_type": "LSTM",
    "embedding_size": 32,
    "hidden_size": 256,
    "n_layers": 3,
    "dropout": 0,
    "batch_size": 64,
    "learning_rate": 0.001,
    "max_epochs": 3,
    "patience": 50000,
    "log_every_steps": 100,
    "log_every_epochs":  1,
    "sample_mols": 100
  },

  "metrics": ["freq-avg"],

  "min_tc": 0,
  "top_k": 30,
  "err_ppm": 10

}
